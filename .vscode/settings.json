{
    "python.analysis.typeCheckingMode": "basic",
    "[python]": {
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": true
        }
    },
    "ruff.args": [
        "--ignore",
        "F403",
        "E722"
    ],
    "ruff.run": "onSave"
}
